<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Week6.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <Label x:Name="Choice" Text="Your Choice?"/>
            <Entry x:Name="DataEntry" />
            <Button x:Name="PopUp" Text="PopUp" Clicked="PopUp_Clicked" />
            <Button x:Name="ButtonRead" Text="Error" Clicked="ButtonRead_Clicked_1" ></Button>
            <Button
                x:Name="CounterBtn"
                Text="Click me"
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnCounterClicked"
                HorizontalOptions="Center" />
            <ListView x:Name="DataDisplay" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
